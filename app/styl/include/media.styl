rupture.scale = 0 480px 767px 992px 1200px
rupture.scale-names = 'xs' 's' 'm' 'l' 'xl'


// (max-width: 1200px)
+below('l')
	.container
		width 970px
	.info-content-2
		justify-content space-around
// (max-width: 992px)
+below('m')
	.container
		width 750px
// (max-width: 767px)
+below('s')
	.container
		width 100%
	.reasons-content article
		width 100%
	.tarif-content
		flex-wrap wrap
	.tarif-item
		padding-right 55px
	.footer-content
		> *
			flex-basis 100%
	.footer
		nav
			max-width 440px
			justify-content space-between
			margin auto
			ul
				margin-right 0
// Custom media
+below(704px)
	.info
		&-content
			margin 85px auto
		&-item
			width auto
			&:nth-child(4)
				order 5
				width auto
// (max-width: 480px)
+below('xs')
	.info
		&-content
			max-width 450px
			margin inherit auto
		&-item
			&:nth-child(4)
				order 5
				width auto