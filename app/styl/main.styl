@import 'include/mixins.styl'
@import url('https://fonts.googleapis.com/css?family=Open+Sans:300,400,600');
// Normalize
global-reset()

// Global styles
*
	box-sizing: border-box
	outline: none

*::after, *::before 
	box-sizing: border-box

gray = #959595
flex-version = flex


body
	font-family Open Sans
	
.container
	width 1170px
	padding 0	15px
	margin 0 auto
	clearfix()

h1, h2, h3
	font-weight 300

h1
	font-size 3.75em
	margin-bottom 20px
	
h2
	font-size 2.1875em

h3
	font-size 1.875em
	margin-bottom 25px

h5, a
	font-weight 600

p
	font-set(0.875em, gray)
a
	text-decoration none
	color #fff
	display block
	&:hover
		color gray
button
	cursor pointer
// Global styles end


// Head styles
.head
	background-image url(../img/backgrounds/head-bg.png)
	min-height 1209px
	background-position center
	color #fff
	.logo
		background-image url(../img/icons/logo.png)
		width 92px
		height 41px
		margin-left 30px
		margin-top 50px
	&-content
		width 42%
		min-width 242px
		padding 0 30px
		margin-top 300px
		p
			color #fff
		
// Head styles End

// Info styles

.info
	margin-top -175px
	padding-bottom 10%
	&-wrap
		display flex
		align-items flex-end
		justify-content space-between
		flex-wrap wrap
	article
		max-width 560px
		p
			margin-top 25px
	&-content
		display flex
		flex-wrap wrap
		justify-content center
		margin 85px 0
		color #fff
		+h2
			margin-bottom 65px
	&-item
		width 33.3%
		min-width 225px
		padding 45px
		&:nth-child(1)
			background-color #f5989d
		&:nth-child(2)
			background-color #615f7d
		&:nth-child(3)
			background-image url(../img/item-1.png)
			background-size cover
		&:nth-child(4)
			width 66.6%
			background-image url(../img/item-2.png)
			background-size cover
		&:nth-child(5)
			background-color #82ca9c
		p
			color #fff
		a
			margin-top 35px
			span
				background-image url(../img/icons/arrow.png)
				width 14px
				height 5px
				display inline-block
				vertical-align middle
				margin-left 15px
			&:hover span 
				background-image url(../img/icons/arrow-g.png)
	&-content-2
		display flex
		flex-wrap wrap
		justify-content space-between
		align-items center
		article
			width 265px
			margin-top 30px
// Info styles End

// Power styles

.power
	background-image url(../img/backgrounds/power-bg.png)
	background-position center
	background-size cover
	min-height 874px
	color #fff
	padding 450px 0 130px
	p
		color #fff
	&-content
		max-width 500px
		a
			margin-top 25px
			span
				background-image url(../img/icons/arrow.png)
				width 14px
				height 5px
				display inline-block
				vertical-align middle
				margin-left 15px
			&:hover span 
				background-image url(../img/icons/arrow-g.png)
				
// Power styles End

// Reasons styles

.reasons
	padding 125px 0 160px
	background-color #82ca9c
	color #fff
	&-content
		@extend .info-content-2
		padding-top 30px
		article
			width 30%
			p
				color inherit
				margin-top 30px

// Reasons styles End

// Tarif styles

.tarif
	padding 100px 0 145px
	background-color #f6f7fa
	&-content
		display flex
		justify-content space-between
	&-item
		max-width 570px
		min-width 300px
		text-align left
		padding 55px
		padding-right 100px
		margin auto
		&:hover
			background-color #fff
			box-shadow 0px 0px 35px rgba(000, 000, 000, 0.1)
		.price
			font-size 0.75em
			font-weight 600
			text-transform uppercase
			color #fff
			border-radius 6px
			display inline-block
			padding 7px 17px
			margin-bottom 25px
		&:nth-child(1) .price
			background-color #e1e1e1
		&:nth-child(2) .price
			background-color #bd8cbf
		button
			background-color #82ca9c
			text-transform uppercase
			color #fff
			font-weight 600
			padding 18px 30px
			border-radius 5px
			border 0
			margin 25px 0 20px
			display block
			&:hover
				background-color #91dbad
		.apple, .windows
			display inline-block
			width 24px
			height 24px
			background-repeat no-repeat
			margin-right 16px
		.apple
			background-image url(../img/icons/apple.png)
		.windows
			background-image url(../img/icons/windows.png)
			
// Tarif styles End

// Footer styles

.footer
	background-color #192431
	min-height 605px
	padding 130px 0
	color #f6f7fa
	&-content
		@extend .info-content-2
		align-items flex-start
		margin-bottom 28px
		> *
			flex-basis 45%
		h5
			margin-bottom 28px
		p
			color #f6f7fa
	form
		.form-wrap
			display flex
			position relative
			> *
				height 58px
		input
			width 85%
			font-size 1.8em
			padding 0 10px
			color gray
			font-weight 300
			font-family Open Sans
			border-radius 3px 0 0 3px
			border 0
		button
			width 15%
			border-radius 0 3px 3px 0
			border 0
			background-color #82ca9c
			text-align center
			&:hover
				background-color #91dbad
			span
				background-image url(../img/icons/check.png)
				width 24px
				height 18px
				display inline-block
		p 
			font-set(0.85em, #57697f)
			margin-top 15px
	nav
		display flex
		justify-content flex-start
		ul
			margin-right 90px
			h5
				margin-bottom 30px
			li
				margin-bottom 13px
				a
					font-size 0.875em
					font-weight 400
					cursor pointer
		

		

// Footer styles End
@import 'include/media.styl'